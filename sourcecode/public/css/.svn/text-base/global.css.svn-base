html, body{
	margin: 0px auto;
}
html, body {
	background-image: url(../images/background.jpg);
	background-repeat: repeat-x;
	background-size:auto;
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0 ;
}

.thitam {font:12px Trebuchet MS, Tahoma, Geneva, sans-serif; color:#000; }
.thitam a {font:12px Helvetica, Tahoma, Geneva, sans-serif; color: #ffffff; text-decoration:none; }
.thitam a:hover {font:12px Helvetica, Tahoma, Geneva, sans-serif; color: #f37226; }


/* CSS Document data - grid*/
.data_grid{
	font-size:13px;
}
.data_grid td{
	padding:5px;
}
.data_grid #th{
	background-color:#FC3;
	font-weight:bold;
}
.data_grid #odd{
	background-color:#AAA;
}

.data_grid #even{
	background-color:#BBB;
}


/* CSS Document for Zend - Form*/
dl.zend_form{ font-size:13px; background-color:#FC3;}

dl.zend_form dt {
	min-width: 200px;
	float: left;
	clear: left;
	padding-right:15px;
	padding-top:9px;
	padding-bottom:4px;
	text-align: right;
	background-color:#BBB;
}
dl.zend_form dt label.required { font-weight: 600; }

dl.zend_form dd {
	/*float: left;
	clear: right;*/
	padding-top:4px;
	padding-bottom:0px;
	padding-left: 35px;
	background-color:#e6e3e3;
}
dl.zend_form dd ul.errors {
	list-style: none;
	padding: 0;
	margin: 0;
}
dl.zend_form #mode-element{display : none}
dl.zend_form #id-element{display : none}
dl.zend_form dd ul.errors li {
	float: left;
	margin: 0 0.15em;
	font-size: 12px;
	color: #666666;
}

