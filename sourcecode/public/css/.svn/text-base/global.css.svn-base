}
.ui-layout-toggler { /* all 'toggler-buttons' */
	background: #AAA;
}
.ui-layout-toggler:hover { /* all 'toggler-buttons' */
	background: #FC3;
}
.outer-center ,
.middle-center {
/* center pane that are 'containers' for a nested layout */
padding: 0;
border: 0;
}
.inner-center {
    overflow-y: scroll;
}
.inner-center a{
    color:#000099;
    text-decoration:none;
}
