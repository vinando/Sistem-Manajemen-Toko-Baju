<script type="text/javascript">
    $(document).ready(function() {
        $('#table_list_service').dataTable({
            "bJQueryUI": true,
            "bServerSide": true,
            "sServerMethod": "POST",
            "sPaginationType": "full_numbers",
            "sAjaxSource": "/lookup/dataservice"
        });

        $('#table_list_service tbody tr').live('dblclick', function () {
            nTds = $('td', this);
            strServiceID = $(nTds[0]).text();
            strServiceNo = $(nTds[3]).text();

            $('#TrnId').val(strServiceID);
            $('#TrnNo').val(strServiceNo);
            $('#lookup').dialog('close');
        });
    });
</script>
<h1>Service Lookup</h1>

