    <thead>
    <tr>
        <td>Trn. ID</td>
        <td>Branch ID</td>
        <td>Service Type</td>
        <td>Trn. No.</td>
        <td>Trn. Date</td>
        <td>Status</td>
        <td>Customer Name</td>
        <td>Phone</td>
    </tr>
    </thead>
    <tbody>
