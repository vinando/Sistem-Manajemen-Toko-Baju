<script type="text/javascript">
    $(document).ready(function(){
        $("#Qty").keydown(function(event) {
            // Allow: backspace, delete, tab, escape, and enter
            if ( event.keyCode == 46 || event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 27 || event.keyCode == 13 ||
                // Allow: Ctrl+A
                (event.keyCode == 65 && event.ctrlKey === true) ||
                // Allow: home, end, left, right
                (event.keyCode >= 35 && event.keyCode <= 39)) {
                // let it happen, don't do anything
                return;
            }
            else {
                // Ensure that it is a number and stop the keypress
                if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105 )) {
                    event.preventDefault();
                }
            }
        });
    });

    function loadPrice(){
        productid = $('#ProductID').val();
        $.ajax({
            url: '/trnsalesorder/jsongetproduct/ProductId/' + productid,
            dataType: 'json',
            async: false,
            success: function(data){
                //alert(data[0].PRIZE);
                $('#Price').val(data.prize);
            }
        });
        loadTotal();
    }

    function loadTotal(){
        var price = $('#Price').val();
        var qty = $('#Qty').val();
        if(qty == '') qty = 0;
        var total = price * qty;
        $('#dTotal').val(total);
        //loadGrandTotal();
    }

    function loadGrandTotal(){
        numrows = $('#numrows').val();
        alert(numrows);
        var grandTotal = 0;
        for(i=0; i<numrows; i++){
            if($('#total_' + i).html() != ''){
                grandTotal += parseInt($('#total_' + i).html());
            }
        }
        //var grandTotal = parseInt($('#total1').val()) + parseInt($('#total2').val()) + parseInt($('#total3').val()) + parseInt($('#total4').val()) + parseInt($('#total5').val());
        //alert(grandTotal);
        $('#grandtotal').html( grandTotal );
        $('#Total').val( grandTotal );
    }
</script>
